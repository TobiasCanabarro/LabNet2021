@model MVC.Models.ProductsView
@{
    ViewBag.Title = "Insert Product";
}

<h2>Insert Product</h2>

@using (Html.BeginForm("Insert", "Products", FormMethod.Post, new {id = "form" }))
{
<form id="form" action="/" method="post">
    <div class="form-group">
        <label>ID</label>@Html.TextBoxFor(r => r.Id)
    </div>
    <div class="form-group">
        <label>Name</label>@Html.TextBoxFor(r => r.ProductName)
    </div>
    <div class="form-group">
        <label>Unit price</label>@Html.TextBoxFor(r => r.UnitPrice)
    </div>
    <div class="form-group">
        <label>Units in stock</label>@Html.TextBoxFor(r => r.UnitsInStock)
    </div>
    <button id="insert" type="submit" class="btn btn-primary">Insert</button>
</form>    
}

